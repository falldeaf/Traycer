{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "Traycer.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "index.md"
        ],
        "exclude": [
          "api/**"
        ]
      },
      {
        "files": [
          "articles/toc.yml",
          "toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "styles/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Traycer HUD",
      "_appFooter": "Traycer HUD Documentation",
      "_enableSearch": true,
      "_disableNavbar": false,
      "_appLogoPath": "images/traycer-icon.png",
      "_appAdditionalHead": "<link rel=\"stylesheet\" href=\"styles/main.css\"><script>window.traycerDocsConfig = { repoUrl: \"https://github.com/SimX/traycer\", logoPath: \"images/traycer-logo.svg\" };</script>",
      "_appAdditionalFooter": "<script src=\"styles/main.js\"></script>"
    },
    "template": [
      "default",
      "modern"
    ],
    "dest": "../docs"
  }
}
